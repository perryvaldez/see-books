{%- extends "../../layouts/no-nav.twig" -%}

{%- block customheaders -%}

<link rel="stylesheet" href="{{ path('/css/login.css') }}" />

{%- endblock -%}

{%- block content -%}
<h1>Login</h1>

<form id="login-form" method="post" action="{{ path('/login') }}">
  <div class="form-row">
    <label for="username">Username:</label>
    <input type="text" name="username" id="username" maxlength="255" />
  </div>
  <div class="form-row">
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" maxlength=20"" />
  </div>
  {% if (loginError) %}
  <div class="form-row error-row error">
    <p>Unable to log in. Please try again.</p>
  </div>
  {% endif %}
  <div class="form-row button-row">
    <button type="submit">Login</button>
  </div>
  <input type="hidden" name="{{ _csrf.parameterName }}" value="{{ _csrf.token }}" />
</form>
{%- endblock -%}
